{
  "permissions": {
    "allow": [
      "Bash(make check-test:*)",
      "Bash(make all:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "make format && make check",
            "statusMessage": "Formatting and linting before commit..."
          }
        ]
      }
    ]
  }
}
